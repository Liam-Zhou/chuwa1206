type Post {
    id: ID
    title: String
    description: String
    content: String
}

type Author {
    id: ID
    name: String
    email: String
}

type Query {
    getPostById(id: ID): Post
    getAllPost: [Post]
    getAuthorById(id: ID): Author
    getAllAuthor: [Author]
}

type Mutation {
    createPost(title:String!, description:String!, content:String!): Post!
    createAuthor(name:String!, email:String): Author!
}