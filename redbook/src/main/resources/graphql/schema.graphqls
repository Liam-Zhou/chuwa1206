type Post{
    id: ID
    title: String
    description: String
    content: String
}

type Author{
    id: ID
    name: String
}

type Comment{
    id: ID
    name: String
    body: String
}

type Query{
    getPostById(id: ID): Post
    getAllPosts: [Post]
    getCommentById(id: ID, postId: ID): Comment
}

type Mutation{
    createPost(title:String!, description:String!, content:String!): Post!
    createComment(postId: ID!, name:String!, body:String!): Comment
}